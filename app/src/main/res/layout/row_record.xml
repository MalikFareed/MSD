<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/tvRecordRowDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="12/12/22"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvRecordRowTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Morning"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvRecordRowRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="99999"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvRecordRowMann"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="999"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvRecordRowSair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="39"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvRecordRowAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="1234567.00"
            android:textSize="18sp"/>

        
        
    </LinearLayout>

</androidx.cardview.widget.CardView>